{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "script"
    },
    "rules": {
        "indent": [
            "warn",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "no-undef": "warn",
        "no-redeclare": "warn",
        "no-var": "warn",
        "no-unused-vars":"off" // we define stuff to use in other scripts
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "onInit" : "readonly"
     }
}
